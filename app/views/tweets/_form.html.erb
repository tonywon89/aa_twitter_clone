<h2>New Tweet!</h2>
<form action="/tweets" class="tweet-compose" method="POST">
  <input
      type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>">

  <label>
    Content
    <textarea name="tweet[content]" maxlength="140"></textarea>
  </label>
  <br>

  <label>
    Mention
    <script type="text/template">
      <div>
        <select name="tweet[mentioned_user_ids][]">
          <option></option>
          <% User.all.each do |user| %>
            <option value="<%= user.id %>"><%= user.username %></option>
          <% end %>
        </select>
        <a class="remove-mentioned-user" href="javascript:void(0)">Remove Mention User </a>
      </div>

    </script>
    <a href="javascript:void(0)" class="add-mentioned-user">Mention User</a>
    <div class="mentioned-users">

    </div>
  </label>
  <br>

  <input type="Submit" value="Post Tweet!">
</form>

<strong class="chars-left" data-max-length= "140">140</strong>
